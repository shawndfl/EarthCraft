{
  "compilerOptions": {
    "target": "ES2020",
    "noImplicitAny": true,
    "types": ["node", "jest"],
    "jsx": "react-jsx",
    "jsxImportSource": "jsx-dom",
    "module": "commonjs",
    "allowJs": true,
    "outDir": "lib",
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx", "./__tests__/**/*.ts"]
}
